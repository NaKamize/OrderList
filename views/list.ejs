<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/table.css">
</head>

<body>
    <main>
        <header>
            <div id="switch">
                <button id="menuBtn" type="button" onclick="location.href='/';">Items</button>
                <button id="menuBtn" type="button" onclick="location.href='/list';">List</button>
            </div>
        </header>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Items</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for (let res in data) {%>
                    <tr>
                        <td>
                            <%= data[res].id%>
                        </td>
                        <td>
                            <%= data[res].list %>
                        </td>
                        <td>
                            <form method="POST" action="/list/del/<%= data[res].id%>?_method=DELETE"><button id="DelBtn"
                                    type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </main>
</body>

</html>